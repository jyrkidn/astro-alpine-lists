---
export interface Props {
	name?: string;
	items?: Array<{
        name: string;
        is_bought: boolean;
    }>;
}
const { name = '', items = [] } = Astro.props;
---

<div class="mt-2 w-full">
    <input
        id="name"
        type="text"
        placeholder="Name"
        class="w-full p-3 rounded-lg"
        value={name}
    />
    <!-- <div v-if="form.errors.name">{{ form.errors.name }}</div> -->
</div>

<ul class="w-full">
    <li class="flex my-2 items-center w-full">
        <form>
            <input
                type="text"
                class="outline-none grow bg-transparent border-0 p-2"
                placeholder="+ add item"
            />
        </form>
    </li>
    {items.map((item) => (
        <li
            class="flex my-2 items-center w-full"
        >
            <input
                type="checkbox"
                class="appearance-none checked:bg-blue-500 h-5 w-5 border-2 rounded-full p-2"
            />

            <input
                type="text"
                value={item.name}
                class="outline-none grow bg-transparent border-0 p-2"
            />
            <!-- <div v-if="form.errors && form.errors[`items.${index}.name`]">
                {{ form.errors[`items.${index}.name`] }}
            </div> -->
        </li>
    ))}
</ul>
